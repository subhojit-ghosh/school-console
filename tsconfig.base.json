{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@school-console/drizzle": ["libs/drizzle/src/index.ts"],
      "@school-console/utils": ["libs/utils/src/index.ts"],
      "@components/*": ["apps/web/src/app/components/*"],
      "@pages/*": ["apps/web/src/app/pages/*"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
